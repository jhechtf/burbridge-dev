{
    "extends": "tslint:recommended",
    "rules":{
        "class-name": false,
        "whitespace": {
            "options": ["check-decl", "check-module", "check-type", "check-type-operator"]
        },
        "no-console": false,
        "ordered-imports": false,
        "curly": {
            "options": ["ignore-same-line"]
        },
        "quotemark":{
            "options": ["single", "avoid-escape"]
        },
        "object-literal-sort-keys": false,
        "max-line-length": false,
        "trailing-comma": false,
        "interface-name": false,
        "variable-name": {
            "options": ["allow-leading-underscore","allow-snake-case","allow-pascal-case"]
        }
    }
}